<?xml version="1.0" encoding="utf-8"?>
<ru.profi1c.engine.widget.ObjectView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/fba_object_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ru.profi1c.engine.widget.FieldEditText
        android:id="@id/fba_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" />

    <ru.profi1c.engine.widget.FieldEditText
        android:id="@+id/fba_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fba_code"
        android:ems="10" >

        <requestFocus />
    </ru.profi1c.engine.widget.FieldEditText>

</ru.profi1c.engine.widget.ObjectView>