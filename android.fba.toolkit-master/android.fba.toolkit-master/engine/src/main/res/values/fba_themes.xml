<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FbaBaseTheme" parent="Theme.AppCompat"></style>

    <style name="FbaBaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="Theme.Fba.Dialog" parent="Theme.AppCompat.Dialog"/>

    <style name="Theme.Fba.Light.Dialog" parent="Theme.AppCompat.Light.Dialog"/>

    <!-- Application theme. -->
    <style name="Theme.Fba" parent="FbaBaseTheme">
        <item name="lightButtonStyle">@style/Fba.Widget.ButtonSimple</item>
        <item name="simpleListHeaderStyle">@style/SimpleListHeader</item>
        <item name="reportDlgBgrColor">@color/fba_report_dlg_bgr</item>
        <item name="verticalListDividerDrawable">@drawable/fba_vertical_list_divider</item>
    </style>

    <style name="Theme.Fba.Light" parent="FbaBaseTheme.Light">
        <item name="lightButtonStyle">@style/Fba.Widget.ButtonSimple.Light</item>
        <item name="simpleListHeaderStyle">@style/SimpleListHeader.Light</item>
        <item name="reportDlgBgrColor">@color/fba_report_dlg_bgr_light</item>
        <item name="verticalListDividerDrawable">@drawable/fba_vertical_list_divider_light</item>
    </style>

    <style name="Theme.Fba.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fba.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Fba.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fba.Light.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Fba.TransparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Theme.Fba.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>