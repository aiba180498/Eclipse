<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Fba"/>

    <style name="Fba.Widget"/>

    <style name="Fba.Widget.ButtonSimple" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_material_dark</item>
    </style>

    <style name="Fba.Widget.ButtonSimple.Light" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_material_light</item>
    </style>

    <style name="SimpleListHeader">
        <item name="android:background">@drawable/fba_header_bgr</item>
        <item name="android:paddingLeft">@dimen/fba_list_item_devider</item>
        <item name="android:paddingRight">@dimen/fba_list_item_devider</item>
    </style>

    <style name="SimpleListHeaderView" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/fba_list_item_padding</item>
        <item name="android:paddingBottom">@dimen/fba_list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="SimpleListHeader.Light">
        <item name="android:background">@drawable/fba_header_bgr_ligth</item>
    </style>

    <style name="SimpleListItem" parent="@android:style/Widget.ListView">
        <item name="android:paddingLeft">@dimen/fba_list_item_devider</item>
        <item name="android:paddingRight">@dimen/fba_list_item_devider</item>
    </style>

    <style name="SimpleListItemView">
        <!--
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/fba_list_item_min_height</item>
    </style>

    <style name="Fba.Widget.Label">
    </style>

    <style name="Fba.Widget.Label.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="FbaLabelCopyright" parent="Fba.Widget.Label.Accent">
        <item name="android:textSize">@dimen/fba_text_size_small</item>
    </style>

    <style name="FbaAppVersionLabel" parent="Fba.Widget.Label.Accent">
        <item name="android:textSize">@dimen/fba_text_size_head_dialog</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>