<?xml version="1.0" encoding="utf-8"?>
<ru.profi1c.engine.widget.ObjectView
    android:id="@+id/objectViewSku"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ru.profi1c.engine.widget.FieldCheckBox
                android:id="@+id/cbVesovoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ru.profi1c.engine.widget.FieldToggleButton
                android:id="@+id/tbVestiPoSeriayam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/cbPoHarakteristic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По хар-кам"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvArtikul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <EditText
            android:id="@+id/etKomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Комментарий">

            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ru.profi1c.engine.widget.FieldEditText
                android:id="@+id/fetArtikul"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"/>

            <ru.profi1c.engine.widget.FieldEditText
                android:id="@+id/fetVesovoiKoefficient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0"/>
        </LinearLayout>

        <ru.profi1c.engine.widget.FieldPresentationSpinner
            android:id="@+id/spinStatyaZatrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <ru.profi1c.engine.widget.FieldPresentationSpinner
            android:id="@+id/spinBazovayaEdinica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <ru.profi1c.engine.widget.FieldPresentationSpinner
            android:id="@+id/spinStavkaNDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStrana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="страна"/>

        <TextView
            android:id="@+id/tvSenovayaGrupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ценовая группа"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </LinearLayout>

</ru.profi1c.engine.widget.ObjectView>