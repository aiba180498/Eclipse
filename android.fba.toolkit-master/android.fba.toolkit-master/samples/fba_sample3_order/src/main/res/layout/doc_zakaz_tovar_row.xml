<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listRow"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp" >

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fetKolvo"
        android:text="Босоножки женские белые 12 (оранжевые с синим)" />

    <ru.profi1c.engine.widget.FieldEditText
        android:id="@+id/fetKolvo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="right"
        android:inputType="number" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDescription"
        android:layout_below="@+id/tvDescription"
        android:background="#ff76923c"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="178 000,44 руб./кг"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout>