<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".wizard.InfoPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout

            style="@style/SalesPointPageInfoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1">

            <include layout="@layout/sales_point_phone_layout"/>

            <include layout="@layout/sales_point_site_layout"/>

            <include layout="@layout/sales_point_status_layout"/>

            <include layout="@layout/sales_point_comment_layout"/>

        </TableLayout>

    </LinearLayout>
</ScrollView>
